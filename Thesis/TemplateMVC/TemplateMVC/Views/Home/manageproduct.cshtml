    <div class="container">

        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-primary px-4 py-3 mt-3" data-toggle="modal" data-target="#myModal">Add Product</button>
        <br />

        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Add Product</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="input-group mb-3 col-lg-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Name</span>
                                </div>
                                <input type="text" id="addQrCode" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-group mb-3 col-lg-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Price</span>
                                </div>
                                <input type="text" id="addName" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-group mb-3 col-lg-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Note</span>
                                </div>
                                <input type="number" id="addAge" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-group mb-3 col-lg-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Company</span>
                                </div>
                                <select class="custom-select" id="addSex">
                                    <option selected>Choose...</option>
                                    <option value="male">abc</option>
                                    <option value="female">xyz</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-group mb-3 col-lg-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Category</span>
                                </div>
                                <select class="custom-select" id="addSex">
                                    <option selected>Choose...</option>
                                    <option value="male">Drug</option>
                                    <option value="female">Device</option>
                                    <option value="female">Else</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-group mb-3 col-lg-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Bill</span>
                                </div>
                                <select class="custom-select" id="addSex">
                                    <option selected>Choose...</option>
                                    <option value="male">01</option>
                                    <option value="female">02</option>
                                    <option value="female">03</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" onclick="addProduct()">Save</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>

    
