    <div class="container">
        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-primary px-4 py-3 mt-3" data-toggle="modal" data-target="#myModal">Add Company</button>
        <br />
        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Add Company</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="input-group mb-3 col-lg-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Name</span>
                                </div>
                                <input type="text" id="create_namecompany" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-group mb-3 col-lg-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Address</span>
                                </div>
                                <input type="text" id="create_addresscompany" class="form-control">
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-group mb-3 col-lg-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Phone</span>
                                </div>
                                <input type="text" id="create_phonecompany" class="form-control">
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-group mb-3 col-lg-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Email</span>
                                </div>
                                <input type="text" id="create_emailcompany" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" onclick="Create($('#create_namecompany').val(), $('#create_addresscompany').val(), $('#create_phonecompany').val(),$('#create_emailcompany').val())">Save</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>



    <!--Edit Modal -->
    <div id="modalEdit" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Company</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="input-group mb-3 col-lg-12">
                            <div class="input-group-prepend">
                                <span class="input-group-text">ID</span>
                            </div>
                            <input type="text" id="id_company" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-group mb-3 col-lg-12">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Name</span>
                            </div>
                            <input type="text" id="name_company" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-group mb-3 col-lg-12">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Address</span>
                            </div>
                            <input type="text" id="address_company" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-group mb-3 col-lg-12">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Phone</span>
                            </div>
                            <input type="text" id="phone_company" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-group mb-3 col-lg-12">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Email</span>
                            </div>
                            <input type="text" id="email_company" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" onclick="Update($('#id_company').val(),$('#name_company').val(),$('#address_company').val(),$('#phone_company').val(),$('#email_company').val())">Save</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <!--Delete Modal -->
    <div id="modalDelete" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete Company</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="input-group mb-3 col-lg-12">
                            Make sure ?
                        </div>
                    </div>
                    <input type="text" id="id_company" class="form-control" readonly>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="Delete($('#id_company').val())">Delete Company</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <table id="company" class="table table-striped table-bordered" style="width:100%">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Function</th>
        </tr>

        @foreach (var Company in ViewBag.OnePageOfCompanys)
        {
            <tr>
                <td>@Company.id_company</td>
                <td>@Company.name_company</td>
                <td>@Company.address_company</td>
                <td>@Company.phone_company</td>
                <td>@Company.email_company</td>
                <td>
                    <button type="button" class="btn btn-primary px-4 py-3 mt-3" data-toggle="modal" data-target="#modalEdit">Edit Company</button>
                    <button type="button" class="btn btn-primary px-4 py-3 mt-3" data-toggle="modal" data-target="#modalDelete">Delete Company</button>
                </td>
            </tr>
         }
        <!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
        @Html.PagedListPager((IPagedList)ViewBag.OnePageOfCompanys, page => Url.Action("pageCompany", new { page }))

    </table>

