    <script>
        $('#company tr').click(function () {
            var id_company = $('#id_company').val($(this).find("td").eq(0).html());
            var name_company = $('#name_company').val($(this).find("td").eq(1).html());
            var address_company = $('#address_company').val($(this).find("td").eq(2).html());
            var phone_company = $('#phone_company').val($(this).find("td").eq(3).html());
            var email_company = $('#email_company').val($(this).find("td").eq(4).html());
        });
    </script>

    <script>
        function Delete(id_company) {
            $.ajax({
                url: "http://localhost:63440/Home/deleteCompany",
                type: 'GET',
                data: {
                    id_company: id_company
                },
                success: function (result) {
                    console.log(result);
                    alert("Delete successful!");
                    window.location = "../Home/pageCompany"
                }
            });
        }
    </script>

    <script>
        function Update(id_company, name_company, address_company, phone_company, email_company) {
            $.ajax({
                url: "http://localhost:63440/Home/updateCompany",
                type: 'GET',
                data: {
                    id_company: id_company,
                    name_company: name_company,
                    address_company: address_company,
                    phone_company: phone_company,
                    email_company: email_company
                },
                success: function (result) {
                    console.log(result);
                    alert("Update Successful!");
                    window.location = "../Home/pageCompany"
                }
            });
        }
    </script>

    <script>
        function Create(create_namecompany, create_addresscompany, create_phonecompany, create_emailcompany) {
            $.ajax({
                url: "http://localhost:63440/Home/createCompany",
                type: 'GET',
                data: {
                    name_company: create_namecompany,
                    address_company: create_addresscompany,
                    phone_company: create_phonecompany,
                    email_company: create_emailcompany
                },
                success: function (result) {
                    console.log(result);
                    alert("Create Successful!");
                    window.location = "../Home/pageCompany"
                }
            });
        }
    </script>
